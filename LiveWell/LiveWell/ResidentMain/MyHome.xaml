<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiveWell.MyHome">
  <StackLayout Orientation="Vertical">
    <Label Text="My Home" VerticalOptions="Center" HorizontalOptions="Center" FontSize="30" TextColor="#5d1fd1"/>
    <Label x:Name ="address" Text="200 Stanton Ave" HorizontalOptions="Center" FontSize="20" TextColor="#1daf8d"/>
    <Label x:Name ="room" Text="Apt 402" HorizontalOptions="Center" FontSize="18" TextColor="#1daf8d"/>
    <Label x:Name ="residents" Text="Ethan W., Chris W., Chase W., and Micah B." HorizontalOptions="Center" FontSize="12" TextColor="#1daf8d"/>
    <Label Text="Quick View" HorizontalOptions="Center" FontSize="18" TextColor="#5d1fd1"/>
    <ListView x:Name="quickview">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell TextColor="Black" Text="{Binding Path = Summary}" Detail="{Binding Path = Details}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <Label x:Name ="balance" Text="Balance: $72.68" HorizontalOptions="Center" FontSize="18" TextColor="#5d1fd1"/>
    <Button x:Name ="pay" Text="Pay" Clicked="payment" TextColor="#5d1fd1" BackgroundColor="#1daf8d"/>
  </StackLayout>
</ContentPage>