<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiveWell.Payment">
  <StackLayout Orientation="Vertical">
    
    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
      <StackLayout Orientation="Vertical">
        <Label Text="Building bill" FontSize="20"/>
        <Label x:Name="buildingBill" Text="$692.37" FontSize="20"/>
      </StackLayout>
      <Button Text="Pay" Clicked="payBuilding"/>
    </StackLayout>
    
    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
      <StackLayout Orientation="Vertical">
        <Label Text="Room bill" FontSize="20"/>
        <Label x:Name="roomBill" Text="$72.35" FontSize="20"/>
      </StackLayout>
      <Button Text="Pay" Clicked="payRoom"/>
    </StackLayout>
    
    <Label Text="History" FontSize="20"/>
    <ListView x:Name="payHistory">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell TextColor="Black" Text="{Binding Path = Summary}" Detail="{Binding Path = Details}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>