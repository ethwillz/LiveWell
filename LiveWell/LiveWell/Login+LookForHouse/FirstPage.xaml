<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LiveWell.FirstPage">
	<ContentPage.Content>
		<StackLayout>
			<Label />
			<Label Text="LiveWell" TextColor="#000" FontSize="50" HorizontalOptions="Center"/>
			<Label />
			<Label Text="__________LOG IN__________" TextColor="#000" FontSize="40" HorizontalOptions="Center"/>

			<Button Text="LOGIN AS A RESIDENT" VerticalOptions="CenterAndExpand"
        	HorizontalOptions="Center" HeightRequest="60" WidthRequest="300" BorderWidth="1" FontSize="Large"
			Clicked="OnResidentButtonClicked"/>

      		<Button Text="LOGIN AS AN EMPLOYEE" VerticalOptions="CenterAndExpand"
        	HorizontalOptions="Center" HeightRequest="60" WidthRequest="300" BorderWidth="1" FontSize="Large"
			Clicked="OnEmployeeButtonClicked"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
