<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LiveWell.PasswordResetPage">
	<ContentPage.Content>
		<StackLayout>
	<Label Text="Welcome to Live Well!" 
			VerticalOptions="Start" 
			HorizontalOptions="Center" 
			Font="Large" 
			FontAttributes="Bold" />
	<Label Text="Password Rest" 
			VerticalOptions="Fill" 
			HorizontalOptions="Center" />
	<Label Text="Reset Password"
			VerticalOptions="Fill" 
			HorizontalOptions="StartAndExpand" 
			Font="Large"
			FontAttributes="Bold"/>
	<Entry Placeholder="Please enter your email address" 
			VerticalOptions="Fill" 
			HorizontalOptions="Start" />
	<Button Text="Send new password" 
				HorizontalOptions="FillAndExpand" 
				VerticalOptions="StartAndExpand"
				Clicked="SendPasswordButtonClicked" />
	<Button Text="Go back to login page" 
				HorizontalOptions="EndAndExpand" 
				VerticalOptions="EndAndExpand"
				Clicked="BackButtonClicked"/>
	</StackLayout>

	</ContentPage.Content>
</ContentPage>
