<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="LiveWell.FirstPage">
	<ContentPage.Content>
    <StackLayout BackgroundColor="White">
			<Label />

      <Image x:Name="logo"/>

			<Button Text="LOGIN AS A RESIDENT" VerticalOptions="CenterAndExpand"
        	HorizontalOptions="Center" HeightRequest="60" WidthRequest="300" BorderWidth="1" FontSize="Large"
			Clicked="OnResidentButtonClicked" BackgroundColor="#8F1616" TextColor="White"/>

      		<Button Text="LOGIN AS AN EMPLOYEE" VerticalOptions="CenterAndExpand"
        	HorizontalOptions="Center" HeightRequest="60" WidthRequest="300" BorderWidth="1" FontSize="Large"
			Clicked="OnEmployeeButtonClicked" BackgroundColor="#8F1616" TextColor="White"/>

			<Button Text="LOGIN AS AN OWNER" VerticalOptions="CenterAndExpand"
        	HorizontalOptions="Center" HeightRequest="60" WidthRequest="300" BorderWidth="1" FontSize="Large"
			Clicked="OnOwnerButtonClicked" BackgroundColor="#8F1616" TextColor="White"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
