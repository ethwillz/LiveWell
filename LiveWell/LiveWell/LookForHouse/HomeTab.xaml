<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LiveWell.HomeTab">
	<ContentPage.Content>
		<ScrollView>
		<StackLayout>
		<Label/>
		<Label Text="Ames" TextColor="#000" FontSize="30" HorizontalOptions="Center"/>
		<Label x:Name="title" Text="Explore Apartments" TextColor="#000" FontSize="30" HorizontalOptions="Center"/>

		<ListView x:Name="quickview" ItemTapped="onTap">
      	<ListView.ItemTemplate>
		 <DataTemplate>
		 <ViewCell>
		<StackLayout Spacing="1">	
          <Image Aspect="AspectFill" HeightRequest="350" Source="{Binding Path = AccommodationImageUrl}"/>
          <StackLayout Orientation = "Horizontal">
			<StackLayout>
			<Label TextColor="Black" Text= "{Binding Path = AccommodationType}"/>
			<Label TextColor="Black" Text="{Binding Path = AccommodationAddress}"/>
			</StackLayout>
			<Label Text="  LIKE  " FontSize="Large" TextColor="White" BackgroundColor="Lime" />
		  </StackLayout>
		</StackLayout>
		</ViewCell>


       	 </DataTemplate>
      	</ListView.ItemTemplate>
   	    </ListView>

		</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
