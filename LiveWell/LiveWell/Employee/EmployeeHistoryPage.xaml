<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LiveWell.EmployeeHistoryPage">
		<StackLayout BackgroundColor="White">
      <Label Text="Reason" TextColor="#8F1616"/>
      <Picker x:Name="type">
        <Picker.Items>
          <x:String>Noise violation</x:String>
          <x:String>Late rent</x:String>
          <x:String>Stolen/damaged property</x:String>
          <x:String>Other</x:String>
        </Picker.Items>
      </Picker>
      <Label Text="Unit number" TextColor="#8F1616"/>
      <Editor x:Name="unit"/>
      <Label Text="Amount" TextColor="#8F1616"/>
      <Editor x:Name="amount"/>
     <Button Clicked="fine" Text="Fine" BackgroundColor="#8F1616" TextColor="White"/>
	</StackLayout>
</ContentPage>
