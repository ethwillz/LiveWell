<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiveWell.EmployeeMaintenance">
  <StackLayout BackgroundColor="White">
    <ListView x:Name="requestList" ItemTapped="onTap">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell TextColor="#8F1616" DetailColor="#8F1616" Text="{Binding Path = summary}" Detail="{Binding Path = room}"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>