<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hello.Audio">
  <StackLayout VerticalOptions="Center">
    <Button x:Name="Start" Text="Start recording" WidthRequest="300" Clicked="start"/>
    <Button x:Name ="Stop" Text="Stop recording" WidthRequest="300" IsEnabled="False" Clicked="stop"/>
  </StackLayout>
</ContentPage>